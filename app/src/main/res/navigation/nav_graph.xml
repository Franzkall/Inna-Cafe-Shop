<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/casaFragment">
    <fragment
        android:id="@+id/casaFragment"
        android:name="com.example.abschlussaufgabe.CasaFragment"
        tools:layout="@layout/fragment_casa"
        android:label="CasaFragment" >
        <action
            android:id="@+id/action_casaFragment_to_sortimentFragment"
            app:destination="@id/sortimentFragment" />
    </fragment>
    <fragment
        android:id="@+id/sortimentFragment"
        android:name="com.example.abschlussaufgabe.SortimentFragment"
        tools:layout="@layout/fragment_sortiment"
        android:label="SortimentFragment" >
        <action
            android:id="@+id/action_sortimentFragment_to_moneyFragment"
            app:destination="@id/moneyFragment" />
        <action
            android:id="@+id/action_sortimentFragment_to_casaFragment"
            app:destination="@id/casaFragment" />
    </fragment>
    <fragment
        android:id="@+id/moneyFragment"
        android:name="com.example.abschlussaufgabe.MoneyFragment"
        tools:layout="@layout/fragment_money"
        android:label="MoneyFragment" >
        <action
            android:id="@+id/action_moneyFragment_to_casaFragment"
            app:destination="@id/casaFragment" />
    </fragment>
</navigation>

